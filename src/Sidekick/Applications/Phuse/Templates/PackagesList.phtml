<h1><?= $this->heading ?></h1>
<table class="table table-striped table-bordered table-condensed">
  <tr class="info">
    <th>Name</th>
    <th>Description</th>
    <th>Author</th>
    <th>Version</th>
    <th>License</th>
    <th>Date Created</th>
  </tr>
  <?php if($this->packages): ?>
    <?php foreach($this->packages as $package): ?>
      <tr>
        <td>
          <a href="/phuse/view/<?= $package->id() ?>"><?= $package->name; ?></a>
        </td>
        <td><?= $package->description; ?></td>
        <td><?= ($package->authors != '')? $package->authors : '-'; ?></td>
        <td><?= ($package->version != '')? $package->version : '-'; ?></td>
        <td><?= ($package->license != '')? $package->license : '-'; ?></td>
        <td><?= date('d M y H:i:s', strtotime($package->createdAt)); ?></td>
      </tr>
    <?php endforeach; ?>
  <?php endif; ?>
</table>
