?>
<h1><?= $this->heading ?></h1>
<?php if($this->packages): ?>
  <?= $this->renderFilters() ?>
<table class="table table-striped table-bordered table-condensed">
  <tr class="info">
    <th>Name</th>
    <th>Description</th>
    <?php if($this->showFullList): ?>
      <th>Author</th>
      <th>Version</th>
      <th>License</th>
      <th>Date Created</th>
    <?php endif; ?>
  </tr>
    <?php foreach($this->packages as $package): ?>
      <tr>
        <td>
          <a href="/phuse/view/<?= $package->id() ?>"><?= $package->name; ?></a>
        </td>
        <td><?= $package->description; ?></td>
        <?php if($this->showFullList): ?>
          <td>
            <?php if(is_array($package->authors)): ?>
              <ul>
                <?php foreach($package->authors as $author): ?>
                  <li>
                    <?= $author->name; ?> <?=
                    isset($author->email) ?
                      '&lt;' . $author->email . '&gt;' : ''; ?>
                  </li>
                <?php endforeach; ?>
              </ul>
            <?php else: ?>
              -
            <?php endif; ?>
          </td>
          <td><?= $package->release()->version; ?></td>
          <td><?= ($package->license != '') ? $package->license : '-'; ?></td>
          <td><?= date('d M y H:i:s', strtotime($package->createdAt)); ?></td>
        <?php endif; ?>
      </tr>
    <?php endforeach; ?>
</table>
<?php else: ?>
  <div class="alert alert-warning">
    <strong>No new packages released with the last 2 months</strong>
  </div>
<?php endif; ?>
